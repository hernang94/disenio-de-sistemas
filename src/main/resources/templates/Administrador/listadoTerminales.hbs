{{#partial "contenido"}}
<h1>Pois</h1>
<table class="table table-stripped">
	<tr>
		<th>Nombre</th>
		<th>Comuna</th>
		<th></th>
	</tr>
	
	{{#each terminales}}
		<tr>
			<td>{{terminal}}</td>
			<td>{{comuna}}</td>
			<td><form class="form-inline" action="editar/{{url}}" method="GET">
			<button type="submit" class="btn btn-default btn-sm">Editar</button>
			</form></td>
			<td><form class="form-inline" action="eliminar/{{url}}" method="POST">
			<button type="submit" class="btn btn-default btn-sm">Eliminar</button>
			</form></td>
			<td><form class="form-inline" action="configurarAcciones/{{url}}" method="GET">
			<button type="submit" class="btn btn-default btn-sm">Configurar Acciones</button>
			</form></td>
		</tr>
	{{/each}}
</table>
<form action="/administrador/buscarTerminal" method="GET">
		<input class="btn btn-primary btn-lg" type="submit" value="Volver">
</form>
{{/partial}}

{{>layoutAdministrador.hbs}}