{{#partial "contenido"}}
<h1>Pois</h1>
<div class="jumbotron">
  {{#with poi}}
<form action="/administrador/editar/{{url}}" method="POST">
   <div class="form-group">
			<label for="nombre">Nombre</label>
			<input class="form-control " type="text" style="width:300px" value="{{nombre}}" name="nombre">
		</div>
	
		<div class="form-group2">		
			<label for="direccion">Direccion</label>
			<input class="form-control " type="text" style="width:300px"  value="{{direccion}}" name="direccion">
		</div>
		
		<div class="form-group3">		
			<label for="Latitud">Latitud</label>
			<input class="form-control " type="number" style="width:300px"  value="{{latitud}}" name="latitud">
		</div>
		
		<div class="form-group4">		
			<label for="longitud">Longitud</label>
			<input class="form-control" type="number"  style="width:300px" value="{{longitud}}" name="longitud">
		</div>
		<input class="btn btn-primary btn-lg" type="submit" value="Guardar">
</form>
  {{/with}}
{{/partial}}

