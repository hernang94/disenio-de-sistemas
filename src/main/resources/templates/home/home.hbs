{{#partial "contenido"}}

<div class="jumbotron">
  <h1>Bienvenido al Repositorio de Pois</h1>
  <form action="/login" method="POST">
  <h2>Por favor ingrese con su usuario</h2>
  <div class="form-group">
			<label for="usuario">Nombre</label>
			<input class="form-control" type="text" style="width:300px" placeholder="Usuario" name="usuario">
		</div>
	
		<div class="form-group">		
			<label for="contrasenia">Contraseña</label>
			<input class="form-control" type="password" style="width:300px" placeholder="Contraseña" name="contrasenia">
		</div>
		<input class="btn btn-primary btn-lg" type="submit" value="Ingresar">
</form>
{{/partial}}

